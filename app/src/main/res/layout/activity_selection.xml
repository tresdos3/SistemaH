<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tresdos.com.sistemah.SelectionActivity">

    <Button
        android:id="@+id/btnPadres"
        android:layout_width="295dp"
        android:layout_height="63dp"
        android:text="Padre de familia"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="214dp"
        android:drawableRight="@mipmap/ic_person_add_black_24dp"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/btnHijos"
        android:layout_alignStart="@+id/textView4" />

    <Button
        android:id="@+id/btnHijos"
        android:layout_width="293dp"
        android:layout_height="64dp"
        android:text="Hijos"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="338dp"
        android:layout_marginBottom="140dp"
        android:drawableRight="@mipmap/ic_child_care_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="serif-monospace"
        android:text="Para quien sera esta aplicacion"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_above="@+id/btnPadres"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
